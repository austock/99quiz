<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>구구단 문제풀이</title>
  <style>
    body { font-family: sans-serif; padding: 20px; text-align: center; }
    .choices button { margin: 5px; padding: 10px 20px; }
    .feedback { margin-top: 20px; font-weight: bold; }
  </style>
</head>
<body>
  <h1>구구단 퀴즈</h1>
  <div id="quiz"></div>
  <div class="choices"></div>
  <div class="feedback"></div>
  <button onclick="generateQuestion()">다음 문제</button>

  <script>
    const problems = [
      { question: '1 × 1 = ?', answer: 1 },
      { question: '1 × 2 = ?', answer: 2 },
      { question: '1 × 3 = ?', answer: 3 },
      { question: '1 × 4 = ?', answer: 4 },
      { question: '2 × 2 = ?', answer: 4 },
      { question: '3 × 3 = ?', answer: 9 },
      { question: '5 × 6 = ?', answer: 30 },
      { question: '7 × 8 = ?', answer: 56 },
      // 원하는 만큼 문제를 추가할 수 있어요
    ];

    function getRandomProblem() {
      return problems[Math.floor(Math.random() * problems.length)];
    }

    function generateChoices(answer) {
      const choices = new Set([answer]);
      while (choices.size < 4) {
        const random = answer + Math.floor(Math.random() * 10) - 5;
        if (random > 0) choices.add(random);
      }
      return Array.from(choices).sort(() => Math.random() - 0.5);
    }

    function generateQuestion() {
      const { question, answer } = getRandomProblem();
      const quiz = document.getElementById('quiz');
      const choiceBox = document.querySelector('.choices');
      const feedback = document.querySelector('.feedback');

      quiz.textContent = question;
      feedback.textContent = '';
      choiceBox.innerHTML = '';

      const choices = generateChoices(answer);
      choices.forEach(choice => {
        const btn = document.createElement('button');
        btn.textContent = choice;
        btn.onclick = () => {
          if (choice === answer) {
            feedback.textContent = '정답입니다!';
          } else {
            feedback.textContent = `오답입니다. ${question.replace('?', answer)}가 정답이에요.`;
          }
        };
        choiceBox.appendChild(btn);
      });
    }

    window.onload = generateQuestion;
  </script>
</body>
</html>
